 @model HomeVM
    <!-- main start -->
<main>
    <!-- main section start -->
    <section id="middle">
        <div class="middle">
            <div class="container  d-flex align-items-center flex-column">
                <div class="image">
                    <img src="@Model.Info.Image"
                         alt="">
                    <h1>@Model.Info.Title</h1>
                    <div class="icon">
                        <i class="fa-regular fa-star"></i>
                    </div>
                    <p>@Model.Info.Description</p>
                </div>
            </div>
        </div>
    </section>
    <!-- main section end -->
    <!-- portfolio start -->
    <section id="portfolio">
        <div class="container">
            <div class="title">
                <h2>Portfolio</h2>
                <div class="icon">
                    <i class="fa-regular fa-star"></i>
                </div>
            </div>
            <div class="row">
                @foreach (var item in Model.Portfolios)
                {
                    <div class="col-12 col-sm-6 col-md-6 col-lg-4">
                        <div class="portfolio-item">
                            <div class="image">
                                <div class="bg-color"></div>
                                <img src="assets/image/@item.Image" alt="">
                                <div class="img-icon">
                                    <i class="fa-solid fa-plus"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </section>
    <!-- portfolio end -->
    <!-- about start -->
    <section id="about">
        <div class="container">
            <div class="about-title">
                <h2>About</h2>
                <div class="icon">
                    <i class="fa-regular fa-star"></i>
                </div>
            </div>
            <div class="row justify-content-center my-5 ">
                @foreach (var item in Model.Abouts)
                {
                    <div class="col-lg-4">
                        <div class="description">
                            <p>
                                @item.Description
                            </p>
                        </div>
                    </div>
                }

            </div>
            <div class="download text-center">
                <a href="#"><i class="fa-solid fa-download"></i> Free Download!</a>
            </div>
        </div>
    </section>
    <!-- about end -->
    <!-- contact start -->
    <section id="contact">
        <div class="container">
            <div class="contact-title">
                <h2>Contact Me</h2>
                <div class="icon">
                    <i class="fa-regular fa-star"></i>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <form action="">
                        <div class="form-floating">
                            <input type="text" placeholder="Full name">
                        </div>
                        <div class="form-floating">
                            <input type="email" placeholder="Email address">
                        </div>
                        <div class="form-floating">
                            <input type="tel" placeholder="Phone number">
                        </div>
                        <div class="form-floating">
                            <textarea name="" id="" cols="30" rows="5" placeholder="Message"></textarea>
                        </div>
                        <button class="btn btn-primary btn-xl " type="submit">Send</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <!-- contact end -->
</main>
<!-- main end -->
